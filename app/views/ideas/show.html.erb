
<div class="grid_12">
	
	<%if flash[:isNew] == "true" then %>
		<div class="alert alert-info">
			<a class="close" data-dismiss="alert">&times;</a>
			You have just created an idea on Pindea! To get feedback, you can do the following.
			<ul>
				<li>Use the Facebook Like button to share this link on your News Feed.</li>
				<li>Use the Facebook Send button to share this link with only selected friends.</li>
				<li>Copy this URL in your address bar and send the URL through email or text message.
			</ul>
		</div>
	<% end %>	
	<div class="idea-container">
		<%= @idea.name %>
		</br>
		<%= @idea.description %>
	</div>
<fb:like send="true" width="450" show_faces="false"></fb:like>
</div>
<div class="clear"></div>
<div class="grid_4">
	<h2 class="vertical-margins">Good because...</h2>
</div>
<div class="grid_4">
	<h2 class="vertical-margins">Bad because...</h2>
</div>		
<div class="grid_4">
	<h2 class="vertical-margins">Consider...</h2>
</div>

<div class="clear"></div>

<div id="good-idea-column" class="grid_4">
	 <%= render :partial =>  'points', :locals => { :point_name => "good" } %>
</div>
<div id="bad-idea-column" class="grid_4">
	<%= render :partial =>  'points', :locals => { :point_name => "bad" } %>
</div>		
<div  id="consideration-idea-column" class="grid_4">
	 <%= render :partial =>  'points', :locals => { :point_name => "consideration" } %>		
</div>
