<%= form_for Idea.new, :html => {  :class => "form-stacked" } do |i| %>
	<div class="clearfix control-group">
		<%= i.label :name, "Give your idea a name"%>
		<a id="idea-examples-link"href="#idea-examples-modal" data-toggle="modal" >See examples</a>

		<%= i.text_field :name, :maxlength => Idea::NAME_LENGTH %>
	
	</div>
	<div class="clearfix control-group">
		<%= i.label :description, "Describe your idea" %>
		<%= i.text_area :description, :rows => 10, :maxlength => Idea::DESCRIPTION_LENGTH %>
	</div>

	<%= i.submit "Add", :class => "btn btn-primary" %>

<% end %>


